{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "organizations",
    "ClientId": "YOUR_ENTRA_CLIENT_ID",
    "Audience": "api://YOUR_ENTRA_CLIENT_ID"
  },
  "AuthZ": {
    "ServiceUrl": "http://localhost:3010",
    "TimeoutSeconds": 5,
    "EnableCaching": true,
    "CacheDurationSeconds": 30
  },
  "Cors": {
    "Origins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:3002"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "catalogue-api": {
        "ClusterId": "catalogue",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/api/catalogue/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/catalogue"
          }
        ]
      },
      "analytics-api": {
        "ClusterId": "analytics",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/api/analytics/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/analytics"
          }
        ]
      },
      "docmanager-api": {
        "ClusterId": "docmanager",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/api/documents/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/documents"
          }
        ]
      },
      "reporting-api": {
        "ClusterId": "reporting",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/api/reporting/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/reporting"
          }
        ]
      },
      "authz-api": {
        "ClusterId": "authz",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/api/authz/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/authz"
          }
        ]
      }
    },
    "Clusters": {
      "catalogue": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "analytics": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "docmanager": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003/"
          }
        }
      },
      "reporting": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004/"
          }
        }
      },
      "authz": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:3010/"
          }
        }
      }
    }
  }
}
