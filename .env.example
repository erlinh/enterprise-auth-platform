# Microsoft Entra ID Configuration
# Get these from your Azure Portal > App Registrations
ENTRA_CLIENT_ID=your-entra-client-id-here
ENTRA_TENANT_ID=organizations

# SpiceDB Configuration
SPICEDB_ENDPOINT=localhost:50051
SPICEDB_TOKEN=your-spicedb-preshared-key
SPICEDB_INSECURE=true

# PostgreSQL (for SpiceDB)
POSTGRES_DB=spicedb
POSTGRES_USER=spicedb
POSTGRES_PASSWORD=your-postgres-password

# Redis (optional - disabled by default)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# AuthZ Service
AUTHZ_SERVICE_URL=http://localhost:3010

# Frontend (for Vite apps)
VITE_ENTRA_CLIENT_ID=your-entra-client-id-here
